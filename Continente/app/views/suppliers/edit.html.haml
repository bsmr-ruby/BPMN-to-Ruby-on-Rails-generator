.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", suppliers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_supplier_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_supplier_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Supplier
    .inner
      = form_for @supplier, :url => supplier_path(@supplier), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
