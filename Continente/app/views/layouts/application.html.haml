!!!
%html
  %head
    %title Continente
    = stylesheet_link_tag 'web_app_theme'
    = javascript_include_tag 'application'
    = csrf_meta_tag
    = javascript_include_tag :defaults
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Continente
        #user-navigation
          %ul.wat-cf
            %li
              = current_user.email
            %li
              = link_to t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :method => :delete
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Continente.
        #sidebar
          = yield :sidebar
