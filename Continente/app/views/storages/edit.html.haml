.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", storages_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_storage_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_storage_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Storage
    .inner
      = form_for @storage, :url => storage_path(@storage), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
