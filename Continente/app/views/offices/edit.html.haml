.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", offices_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_office_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_office_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Office
    .inner
      = form_for @office, :url => office_path(@office), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
