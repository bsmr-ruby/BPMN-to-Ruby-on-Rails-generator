.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", stores_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_store_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", store_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.store.address", :default => t("activerecord.labels.address", :default => "Address"))
          \:
        = @store.address
      %p
        %b
          = t("activerecord.attributes.store.city_id", :default => t("activerecord.labels.city_id", :default => "City"))
          \:
        = City.find(@store.city_id).to_string if @store.city_id
        = "--" unless @store.city_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_store_path(@store), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), store_path(@store), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
