.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", stores_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_store_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_store_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Store
    .inner
      = form_for @store, :url => store_path(@store), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
